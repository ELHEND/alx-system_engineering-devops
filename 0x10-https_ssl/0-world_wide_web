#!/usr/bin/env bash

# Define a function to display information about a subdomain.
function display_subdomain_info() {
    local subdomain=$1
    local record_type=$(dig -t A $subdomain +short)
    local destination=$(dig -t A $subdomain +short)

    echo "The subdomain $subdomain is a $record_type record and points to $destination"
}

# Get the domain name from the command line arguments.
domain=$1

# If a subdomain is also provided, display information about that subdomain.
if [[ -n $2 ]]; then
    display_subdomain_info $2
else
    # Display information about the subdomains www, lb-01, web-01, and web-02.
    display_subdomain_info www
    display_subdomain_info lb-01
    display_subdomain_info web-01
    display_subdomain_info web-02
fi

